CC	=	gcc

CFLAGS  =	-Wall -Wextra -Winit-self -Wwrite-strings
CFLAGS  +=	-Wcast-align -Wshadow -Wredundant-decls -Wfloat-equal
CFLAGS  +=	-Wundef -Wlogical-op -Winline -Wdouble-promotion
CFLAGS  +=	-Wunreachable-code -coverage -Iinclude -m64 -fno-builtin

LFLAGS	=	-ldl -lcriterion

NAME	=	tests_x64

RM	=	rm -f

SRCDIR	=	src

SRC	=	setup.c					\
		test/test_strlen.c			\
		test/test_strcpy.c			\
		test/test_strcasecmp.c			\
		test/test_strcmp.c			\
		test/test_strncmp.c			\
		test/test_strchr.c			\
		test/test_memset.c			\
		test/test_memcpy.c			\
		test/test_memmove.c			\
		test/test_rindex.c			\
		test/test_strcspn.c			\
		test/test_strstr.c			\
		test/test_strpbrk.c

SRC	:=	$(addprefix $(SRCDIR)/, $(SRC))

OBJ	=	$(SRC:.c=.o)

all:	$(NAME)

$(NAME):	$(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME) $(LFLAGS)

clean:
	$(RM) $(OBJ)
	$(RM) $(SRC:.c=.gcno)
	$(RM) $(SRC:.c=.gcda)
	$(RM) $(addsuffix ~, $(SRC))

fclean:	clean
	$(RM) $(NAME)

re: fclean all

.PHONY:	all clean fclean re
